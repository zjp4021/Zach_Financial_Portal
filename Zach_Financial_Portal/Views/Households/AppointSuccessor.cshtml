
@{
    ViewBag.Title = "AppointSuccessor";
}

<h2>AppointSuccessor</h2>

@using (Html.BeginForm("AppointSuccessorAsync", "Households", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Household</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.Label("Choose Successor", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("NewHoH",null, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Appoint Successor" class="btn btn-default" />
            </div>
        </div>
    </div>
}


