@model Zach_Financial_Portal.Models.RegisterViewModel

@{
    Layout = null;
}


<!--=====================================Beginning of Template Login Body==================================================================================-->

<!doctype html>
<html class="no-js" lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>Register | ZJP Money Manager</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- favicon
    ============================================ -->
    <link rel="shortcut icon" type="image/x-icon" href="img/favicon.ico">
    <!-- Google Fonts
        ============================================ -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,700,700i,800" rel="stylesheet">
    <!-- Bootstrap CSS
        ============================================ -->
    <link rel="stylesheet" href="~/Content/bootstrap.min.css">
    <!-- Bootstrap CSS
        ============================================ -->
    <link rel="stylesheet" href="~/Content/font-awesome.min.css">
    <!-- adminpro icon CSS
        ============================================ -->
    <link rel="stylesheet" href="~/Content/adminpro-custon-icon.css">
    <!-- meanmenu icon CSS
        ============================================ -->
    <link rel="stylesheet" href="~/Content/meanmenu.min.css">
    <!-- mCustomScrollbar CSS
        ============================================ -->
    <link rel="stylesheet" href="~/Content/jquery.mCustomScrollbar.min.css">
    <!-- animate CSS
        ============================================ -->
    <link rel="stylesheet" href="~/Content/animate.css">
    <!-- normalize CSS
        ============================================ -->
    <link rel="stylesheet" href="~/Content/normalize.css">
    <!-- form CSS
        ============================================ -->
    <link rel="stylesheet" href="~/Content/form.css">
    <!-- style CSS
        ============================================ -->
    <link href="~/Content/style.css" rel="stylesheet" />
    <!-- responsive CSS
        ============================================ -->
    <link rel="stylesheet" href="~/Content/responsive.css">

    <!--Custom Background CSS
    =========================================================-->
    <link href="~/Content/Custom.css" rel="stylesheet" />

    <!-- modernizr JS
        ============================================ -->
    <script src="~/Scripts/modernizr-2.8.3.min.js"></script>
</head>


<body style="background-size:cover; background-image: url('/Images/PiggyBank.jpg')">


    <div class="wrapper-pro">
        <div>
            <a class="hiddenanchor" id="signup"></a>
            <a class="hiddenanchor" id="signin"></a>


            <!-- Register Start-->
            @*<div class="login-form-area mg-t-30 mg-b-15">*@

            <div class="content-inner-all">
                @*<div class="login-form-area">*@
                @*<div class="login-form-area mg-t-30 mg-b-40">*@
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-2"></div>
                        @*<form id="adminpro-register-form" class="adminpro-form">*@
                        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { enctype = "Multipart/form-data" }))
                        {
                            @Html.AntiForgeryToken()
                            <div class="col-md-6">
                                <div class="login-bg" style="color:white">
                                    <div class="row">
                                        <div class="col-lg-12">
                                            <div class="logo">
                                                <h1 style="color:white"><strong>ZJP Money Manager</strong></h1>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row" align="center">
                                        <div class="col-lg-12">
                                            <div class="login-title">
                                                <h1><strong>Please Register Below</strong></h1>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-lg-4">
                                            <div class="login-input-head">
                                                <p>Full Name</p>
                                            </div>
                                        </div>
                                        <div class="col-lg-8" align="center">
                                            <div class="row">
                                                <div class="col-lg-6" align="right">
                                                    <div class="login-input-area register-mg-rt">
                                                        @*<input type="text" name="text" placeholder="First Name" />*@
                                                        @Html.TextBoxFor(m => m.FirstName, new { @class = "login-input-area", placeholder = "First Name" })
                                                        <i class="fa fa-user login-user"></i>
                                                    </div>
                                                </div>
                                                <div class="col-lg-6">
                                                    <div class="login-input-area">
                                                        @*<input type="text" name="text" placeholder="Last Name" />*@
                                                        @Html.TextBoxFor(m => m.LastName, new { @class = "login-input-area", placeholder = "Last Name" })
                                                        <i class="fa fa-user login-user"></i>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-lg-4">
                                            <div class="login-input-head">
                                                <p>Display Name</p>
                                            </div>
                                        </div>
                                        <div class="col-lg-8">
                                            <div class="login-input-area">
                                                @*<input type="email" name="email" />*@
                                                @Html.TextBoxFor(m => m.DisplayName, new { @class = "login-input-area", placeholder = "Display Name" })
                                                <i class="fa fa-envelope login-user" aria-hidden="true"></i>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-lg-4">
                                            <div class="login-input-head">
                                                <p>Email Address</p>
                                            </div>
                                        </div>
                                        <div class="col-lg-8">
                                            <div class="login-input-area">
                                                @*<input type="email" name="email" />*@
                                                @Html.TextBoxFor(m => m.Email, new { @class = "login-input-area", placeholder = "Email Address" })
                                                <i class="fa fa-envelope login-user" aria-hidden="true"></i>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-lg-4">
                                            <div class="login-input-head">
                                                <p>Password</p>
                                            </div>
                                        </div>
                                        <div class="col-lg-8">
                                            <div class="login-input-area">
                                                @*<input type="password" name="password" />*@
                                                @Html.PasswordFor(m => m.Password, new { @class = "login-input-area", placeholder = "Password" })
                                                <i class="fa fa-lock login-user"></i>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-lg-4">
                                            <div class="login-input-head">
                                                <p>Confirm Password</p>
                                            </div>
                                        </div>
                                        <div class="col-lg-8">
                                            <div class="login-input-area">
                                                @*<input type="password" name="confarm_password" />*@
                                                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "login-input-area", placeholder = "Confirm Password" })
                                                <i class="fa fa-lock login-user"></i>
                                            </div>
                                        </div>
                                    </div>
                                    <br />
                                    <div class="row">
                                        <div class="col-lg-4">
                                            <div class="login-input-head">
                                                <p>Upload Avatar</p>
                                            </div>
                                        </div>
                                        <div class="col-lg-8">
                                            <div class="login-input-area">
                                                @Html.TextBox("Avatar", null, new { type = "file" })
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-lg-4"></div>
                                        <div class="col-lg-8"></div>
                                    </div>
                                    <div class="row">
                                        <div class="col-lg-4"></div>
                                        <div class="col-lg-8"></div>
                                    </div>
                                    <div class="row">
                                        <div class="col-lg-4"></div>
                                        <div class="col-lg-8">
                                            <div class="login-button-pro">
                                                @*<button type="submit" class="login-button login-button-rg">Log In</button>*@
                                                @*<button type="submit" class="login-button login-button-lg">Register</button>*@
                                                <button type="submit" class="login-button btn-primary">Register</button>
                                                @Html.ActionLink("Back to Login", "Login", "Account", null, new { @class = "login-button login-button-pro" })
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-lg-4"></div>
                                        <div class="col-lg-8">
                                            <div class="login-button-pro">
                                                @*@Html.ActionLink("Back to Login", "Login", "Account", null, new { @class = "login-button login-button-pro" })*@
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                        <div class="col-lg-3"></div>
                    </div>
                </div>
            </div>
            <!-- Register End-->

        </div>
    </div>




    <!-- jquery
       ============================================ -->
    <script src="~/Scripts/jquery-1.11.3.min.js"></script>
    <!-- bootstrap JS
        ============================================ -->
    <script src="~/Scripts/bootstrap.min.js"></script>
    <!-- meanmenu JS
        ============================================ -->
    <script src="~/Scripts/jquery.meanmenu.js"></script>
    <!-- mCustomScrollbar JS
        ============================================ -->
    <script src="~/Scripts/jquery.mCustomScrollbar.concat.min.js"></script>
    <!-- sticky JS
        ============================================ -->
    <script src="~/Scripts/jquery.sticky.js"></script>
    <!-- scrollUp JS
        ============================================ -->
    <script src="~/Scripts/jquery.scrollUp.min.js"></script>
    <!-- form validate JS
        ============================================ -->
    <script src="~/Scripts/jquery.form.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/form-active.js"></script>
    <!-- main JS
        ============================================ -->
    <script src="~/Scripts/main.js"></script>

</body>

</html>




@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
